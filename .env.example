# TS-CVA Server Configuration
# Copy this file to .env and fill in your actual values

# Server SSH Information
SSH_SERVER=your-server-hostname
SSH_USER=your-username
SSH_PASSWORD=your-password

# Project Paths
LOCAL_PROJECT_DIR=/path/to/local/TS-CVA
REMOTE_PROJECT_DIR=~/TS-CVA

# Conda Environment
CONDA_ENV_NAME=TS-CVA
CONDA_BASE_PATH=/opt/anaconda3
CONDA_ENVS_DIR=/hdd/conda_envs/envs
